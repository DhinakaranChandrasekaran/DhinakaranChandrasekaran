    <script>
        // Sample student data
        const students = [
        {
            regNo: 'CSE714023104001',
            name: 'Abinaya K',
            photo: 'ABN.jpg',
            address: '214, Nehru Main Street, Chennai-641 602.',
            dob: '2005-01-15',
            marks: '85%',
            skills: ['Python', 'SQL'],
            cgpa: '8.5',
            cgpaSemester: [8.1, 8.3, 8.4, 8.6, 8.7, 8.8, 9.0, 9.2],
            projects: [{ name: 'AI Chatbot', link: '#' }],
            certificates: [{ name: 'Python', link: '#' }],
            linkedin: 'https://www.linkedin.com/in/abinaya-k'
        },
        ];

        // Populate student list dynamically
        const studentList = document.getElementById('student-list');
        students.forEach(student => {
            const listItem = document.createElement('li');
            listItem.className = 'list-group-item';
            listItem.innerHTML = `
                <a href="#" onclick="showProfile('${student.regNo}')" class="text-decoration-none">
                    ${student.regNo} - ${student.name}
                </a>`;
            studentList.appendChild(listItem);
        });

        // Show student profile
        function showProfile(regNo) {
            const student = students.find(s => s.regNo === regNo);
            if (!student) return;

            document.getElementById('student-photo').src = student.photo;
            document.getElementById('student-regno').textContent = student.regNo;
            document.getElementById('student-name').textContent = student.name;
            document.getElementById('student-address').textContent = student.address;
            document.getElementById('student-dob').textContent = student.dob;
            document.getElementById('student-marks').textContent = student.marks;
            document.getElementById('student-skills').textContent = student.skills.join(', ');
            document.getElementById('average-cgpa').textContent = student.cgpa;

            const cgpaList = document.getElementById('student-cgpa-semester');
            cgpaList.innerHTML = '';
            student.cgpaSemester.forEach((cgpa, index) => {
                const li = document.createElement('li');
                li.textContent = `Semester ${index + 1}: ${cgpa}`;
                cgpaList.appendChild(li);
            });

            const projectsList = document.getElementById('student-projects');
            projectsList.innerHTML = '';
            student.projects.forEach(project => {
                const li = document.createElement('li');
                li.innerHTML = `<a href="${project.link}">${project.name}</a>`;
                projectsList.appendChild(li);
            });

            const certificatesList = document.getElementById('skills-certifications');
            certificatesList.innerHTML = '';
            student.certificates.forEach(cert => {
                const li = document.createElement('li');
                li.innerHTML = `<a href="${cert.link}">${cert.name}</a>`;
                certificatesList.appendChild(li);
            });

            const linkedinProfile = document.getElementById('student-linkedin');
            linkedinProfile.href = student.linkedin;
            linkedinProfile.textContent = student.linkedin;

            document.getElementById('student-list-section').style.display = 'none';
            document.getElementById('student-profile-section').style.display = 'block';
        }

        // Go back to the student list
        function goBackToStudents() {
            document.getElementById('student-list-section').style.display = 'block';
            document.getElementById('student-profile-section').style.display = 'none';
        }

        // Back to departments (Placeholder function)
        function goBackToDepartment() {
            alert("Navigate back to departments (Implement as needed).");
        }
    </script>
